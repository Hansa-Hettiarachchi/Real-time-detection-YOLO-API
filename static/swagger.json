{
  "swagger": "2.0",
  "info": {
    "title": "Track and Count System API",
    "description": "API for real-time object detection and counting system",
    "version": "1.0.0"
  },
  "host": "localhost:8006",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/submit": {
      "post": {
        "summary": "Initiate video capture",
        "description": "Starts video capture and real-time object detection",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "enum": ["start_capture", "stop_capture"],
                  "description": "Identifier to start video capture"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
